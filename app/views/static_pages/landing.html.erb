    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top yale-blue" role="navigation">
        <div class="container">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <%= link_to "Bulldog Taxi", :root, class: "navbar-brand" %>
                <ul class="nav navbar-nav navbar-right">
                    <% if @signedin && User.find_by(netid: session[:cas_user]).fname != nil %>
                        <li><%= link_to "Create Trip", new_trip_path %></li>
                        <li id="fat-menu" class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <%= User.find_by(netid: session[:cas_user]).fname %> <b class="caret"></b>
                            </a>
                            <ul class="dropdown-menu">
                                <li><%= link_to "Profile", User.find_by(netid: session[:cas_user]) %></li>
                                <li class="divider"></li>
                                <li>
                                  <%= link_to "Sign out", logout_path %>
                                </li>
                            </ul>
                        </li>
                    <% else %>
                        <li><%= link_to "Create Trip", new_user_path %></li>
                     <% end %>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>

    <!-- Header -->
    <div class="intro-header">

        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>Bulldog Taxi</h1>
                        <h3>A Better Way to Yale</h3>
                        <hr class="intro-divider">
                        <ul class="list-inline intro-social-buttons">
                            <li>
                            <% if @signedin && User.find_by(netid: session[:cas_user]).fname != nil %>
                                <%= link_to "Bradley to Yale!", new_trip_path, class: "btn btn-large btn-primary" %>
                                <% else %>
                            <%= link_to "Bradley to Yale!", new_user_path, class: "btn btn-large btn-primary" %>
                            <% end %>
                            </li> <br><br>
                            <li>
                            <%= link_to "New York airports coming soon!", "#", disabled: true, class: "btn btn-secondary btn-large"%>
                            </li> 
                        </ul>
                    </div>
                </div>
            </div>
            <div class="pull-right" id="facebook">
                    <div class="row">
                        <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://bulldogtaxi.herokuapp.com" data-hashtags="BulldogTaxi">Tweet</a>
                        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
                    </div>
                    <div class="row">
                        <div
                          class="fb-like"
                          data-send="true"
                          data-layout="button_count"
                          data-width="450"
                          data-show-faces="true">
                        </div>
                    </div>
                </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.intro-header -->

    <!-- Page Content -->

    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <hr class="section-heading-spacer">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">$50 Cab Ride from Bradley. Guaranteed.</h2>
                    <p class="lead">Bulldog Taxi works by matching you with other Yale student travelers. Just land, collect your luggage, and meet us at the airport to pick up your prepaid fare card. If you ever wait more than an hour, your ride is half-price.<br><br>
                    We will operate <b>August 20-23</b> from <b>9am-8pm </b> everyday.<br>
                    Please checkout our <%=link_to "Policies", policy_path%> for more information. </p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <%= image_tag('bdt_logo2.jpg', class: "img-responsive img-circle") %>
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <section id="team" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"> A Quick Tour</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="team-member">
                        <%= image_tag('step1_user_info.png') %>
                        <h4>User Information</h4>
                    </div>
                </div>
                <div class="col-sm-2">
                <hr class="section-heading-spacer-2">
                 <p class="lead"><small><b>Create an Account</b><br> You can input your phone number in any format. If a friend referred you, don't forget their promo-code!</small></p>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <%= image_tag('step2_flight_info.png') %>
                        <h4>Flight Information </h4>
                    </div>
                </div>
                <div class="col-sm-2">
                <hr class="section-heading-spacer-2">
                <p class="lead"><small><b> Create a Trip</b><br> We outfitted our form with interactive calendars, watches, and drop-down menus to make it as fast and user-friendly as possible.</small> </p>
                </div>
            </div>
        </div>
    </section>
    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2><small><em>Book your trip and save your seat</em></small></h2>
                </div>
                <div class="col-sm-2">
                <hr class="section-heading-spacer-2">
                 <p class="lead"><small><b>Review</b><br> You can edit your trip or proceed to payment. If you used a friend's promo code, you'll see the discount.</small></p>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <%= image_tag('step3_review_pay.png') %>
                        <h4>Review Page</h4>
                    </div>
                </div>
                <div class="col-sm-2">
                <hr class="section-heading-spacer-2">
                <p class="lead"><small><b>Pay</b><br> We work with Stripe, a secure third-party payment system. Stripe keeps your credit card information safe at all times. If necessary, we can also process refunds instantly.</small></p>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <%= image_tag('step4_pay.png') %>
                        <h4>Buy Your Trip</h4>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container still in site walkthrough -->

    </div>

    <section id="team" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2><small><em>That's all there is to it!</em></small></h2>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-4">
                    <div class="team-member">
                        <%= image_tag('step5_receipt.png') %>
                        <h4>Trip Receipt</h4>
                    </div>
                </div>
                <div class="col-sm-2">
                <hr class="section-heading-spacer-2">
                 <p class="lead"><small><b> Your Receipt</b><br> You'll see a receipt for your trip complete with instructions, next steps, and your very own promo code to share with friends. We'll also send you an email with all of your trip info. <b> It's that easy!</b></small></p>
                </div>
                <div class="col-sm-4">
                    <div class="team-member">
                        <%= image_tag('step6_user_profile.png') %>
                        <h4>User Profile </h4>
                    </div>
                </div>
                <div class="col-sm-2">
                <hr class="section-heading-spacer-2">
                <p class="lead"><small><b> Update your Profile</b><br> You can add your class year and college so that we can match you with friends you didn't even know were at the airport. Check out the money I've saved with just four trips. <%= link_to "Lets make a new trip!", new_user_path %></small> </p>
                </div>
            </div>
        </div>
    </section>
    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-sm-12 center">
                <h3> Now that you know what to do... <br>
                <% if @signedin && User.find_by(netid: session[:cas_user]).fname != nil %>
                    <%= link_to "Let's Make a Trip!", new_trip_path, class: "btn btn-large btn-primary" %>
                <% else %>
                    <%= link_to "Let's Make a Trip!", new_user_path, class: "btn btn-large btn-primary" %>
                <% end %></h3>
                </div>
            </div>
        </div>
    </div>
    <!-- Team Section -->
    <section id="team" class="bg-light-gray">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="section-heading"> Meet Your Team Members</h2>
                    <h3 class="section-subheading text-muted">Created by YEI Tech-Bootcamp Fellows:</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-2">
                    <div class="team-member">
                        <%= image_tag('patrick_founder_photo.jpg', class: "img-responsive img-circle border") %>
                        <h4>Patrick Casey</h4>
                        <p class="text-muted">Saybrook '15</p>
                    </div>
                </div>
                <div class="col-sm-4">
                 <p class="lead"><small>I'm an Econ major and a rising senior in Saybrook College. I'm president of the Saybrook College Council, and I'm active in the the Yale Student Investment Group and the Junior (whoa, I mean Senior!) Class Council. As a regular traveler through Bradley, I've spent more than a few miserable hours waiting for the bus. I hope that you'll try Bulldog Taxi to ride to Yale in comfort.</small></p>
                </div>
                <div class="col-sm-2">
                    <div class="team-member">
                        <%= image_tag('ben_founder_photo.jpg',class: "img-responsive img-circle border") %>
                        <h4>Benjamin Burke </h4>
                        <p class="text-muted">Pierson '15</p>
                    </div>
                </div>
                <div class="col-sm-4">
                <p class="lead"><small>I am a Chemical Engineering major and a rising senior in Pierson College. In addition to running Bulldog Taxi, I am one of the captains of the club hockey team, a FOOT leader, an AYA liason to Pierson, and an active member of Pierson College life as an Intramural Secretary. I also run the Saturday soup kitchen with Hunger Heroes. I hope you'll love Bulldog Taxi, and I can't wait to see you all in the Fall.</small> </p>
                </div>
            </div>
        </div>
    </section>

    <div class="banner">

        <div class="container">

            <div class="row">
                <div class="col-lg-3">
                    <h2>Connect:</h2>
                </div>
                <div class="col-lg-4">
                    <ul class="list-inline banner-social-buttons opaque">
                        <li>
                            <h3>bulldogtaxirides@gmail.com</h3>
                        </li>
                    </ul>
                </div>
                <div class="col-lg-3">
                </div>
            </div>

        </div>
        <!-- /.container -->
    </div>
    <!-- /.banner -->
    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">
                <div class="pull-right" id="facebook">
                    <div class="row">
                        <a href="https://twitter.com/share" class="twitter-share-button" data-url="http://bulldogtaxi.herokuapp.com" data-hashtags="BulldogTaxi">Tweet</a>
                        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
                    </div>
                    <div class="row">
                         <div
                          class="fb-like"
                          data-send="true"
                          data-layout="button_count"
                          data-width="450"
                          data-show-faces="true">
                        </div>
                    </div>
                </div>
                <div class="col-lg-12">
                    <ul class="list-inline">
                        <li>
                            <%= link_to "Home", :root %>
                        </li>
                        <li class="footer-menu-divider">&sdot;</li>
                        <% if @signedin && User.find_by(netid: session[:cas_user]).fname != nil %>
                            <li><%= link_to "Create Trip", new_trip_path %></li>
                        <% else %>
                            <li><%= link_to "Create Trip", new_user_path %></li>
                        <% end %>
                        <li class="footer-menu-divider">&sdot;</li>
                        <li> <%= link_to "Refunds & Policies", policy_path %></li>
                    </ul>
                    <p class="copyright text-muted small">Brought to you by Bulldog Taxi LLC.</p>
                </div>
            </div>
        </div>
    </footer>

    <!-- jQuery Version 1.11.0 -->
    <script src="js/jquery-1.11.0.js"></script>

    <!-- Bootstrap Core JavaScript -->
    <script src="js/bootstrap.min.js"></script>

</body>

</html>
