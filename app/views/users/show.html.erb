<div class="row">
	<div class= "hero-unit left span5" id="user_info">
	    <h3><%= @user.fname + " " + @user.lname%></h3>
	    	<%= image_tag @user.image_url.to_s %>
	      <b>Email:</b> <%= @user.email %> <br>
	      <b>Phone:</b> <%= displayPhoneNumber(@user.phone_number) %> <br/>
	      <b>NetID:</b> <%= @user.netid %> <br/>
	      <b>Class Year:</b> <%= @user.year %> <br/>
	      <b>College:</b> <%= @user.college %> <br/><br/>
	      <% if @user.trips.first != nil %>
		      <% if @user.trips.first.payment_status == true %>
		      <b>Promotional Code:</b> <%= @user.promo_code %> <br/>
		      <% end %>
		  <% end %>

		  <b><small> Money saved to date (over full-price cabs): </b> $<%= @user.trip_count*70%>.00<small><br><br><br>

	      <div class="center">
	      	<%= link_to "Edit", edit_user_path, class: "btn-primary btn-large" %>
				</div>
	</div>
	<div class="hero-unit left span7">
		<%= link_to "Create New Trip!", new_trip_path, class: "btn-primary btn-large pull-right" %>
			<h2> Trip History:</h2>
		<div class="span" id="trip_history">
			<% @trips.each do |trip| %>
				<% if trip.payment_status == true %>
					<h3><%= link_to outputDateTime(trip.flight.arrival_datetime)[0] + " " + trip.flight.departure_airport.split(" ")[0] + "/" + trip.flight.arrival_airport.split(" ")[0] , trip %></h3>
					<%= trip.flight.departure_airport %> <em>to</em> <%= trip.flight.arrival_airport %><br>
					Confirmation Number: <%= trip.confirmation %><br>
					Flight Number: <%= trip.flight_number %>
					
				<% end %>	
			<% end %>
			<div>
		<% flash.each do |key, value| %>
			<div class="row text-center">
			<div class="alert alert-<%= key %>"><%= value %></div>
			</div>
		<% end %>
    <div class="pull-right">
        <div
        class="fb-like"
        data-send="true"
        data-width="450"
        data-show-faces="true">
        </div>
      <div>
        <a href="https://twitter.com/share" class="twitter-share-button">Tweet</a>
        <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0],p=/^http:/.test(d.location)?'http':'https';if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src=p+'://platform.twitter.com/widgets.js';fjs.parentNode.insertBefore(js,fjs);}}(document, 'script', 'twitter-wjs');</script>
      </div>
    </div>
		</div>
	</div>
</div>

