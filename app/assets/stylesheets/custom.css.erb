@import "bootstrap";

html {
  overflow-y: scroll;
}

section {
  overflow: auto;
}

textarea {
  resize: vertical;
}

.center {
  text-align: center;
}

.center h1 {
  margin-bottom: 10px;
}
#logo {
  float: left;
  margin-right: 10px;
  font-size: 1.7em;
  color: #fff;
  padding-top: 9px;
  padding-left: 25px;
  font-weight: bold;
  line-height: 1;
}

#logo:hover {
  color: #fff;
  text-decoration: none;
}

.cover {
	background-image: url('bdt_logo.jpg');
	-webkit-background-size: cover;
	min-height: 500px;
	background-size: cover;
	position: relative;
  font-size: 15px;
}

.bottom {
	position: absolute;
	bottom: 0px;
	margin: 0px;
  padding: 0px;
	width: 100%;

}

.edge {
	padding-right: 5%;
  color: white;

}

.hero-unit {
	margin-top: 10px;
  background-color: white;
  border-style: solid;
  border-width: 12px;
  border-color: rgb(00, 66, 99);
  border-radius: 10px;
}
.container {
	margin:0px;
}

body {

	-webkit-background-size: cover;
	background-size: cover;
  background-image: url( <%= asset_path('background_pattern.png') %> );
}

@mixin box_sizing {
  -moz-box-sizing: border-box;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
}


/* miscellaneous */

.debug_dump {
  clear: both;
  float: left;
  width: 100%;
  margin-top: 45px;
  @include box_sizing;
}

.stripe-button-el span {
  font-size: 1.3em !important;
  padding: 1em !important;
}

#trip_history {
  height: 500px;
  overflow: scroll;
}

#user_info {
  height: 50%;
}

footer {
  background-color: rgb(00, 66, 99);
  margin-top: 45px;
  padding-top: 5px;
  border-top: 1px solid #eaeaea;
  color: #999;
}

footer ul {
  text-align: center;
  list-style: none;
  font-size: 20px;
  margin: 10px 0px 0px 0px;
}


.hero_compress {
  padding-bottom: 5px;
}

#stripe_assurance {
  padding-top: 15px;
  font-size: 17px;
}

#trip_form_footer {
  padding-top: 5px;
  font-size: 10px;
}

.navbar-inner {
  background-image: none;
  background-color: rgb(00, 66, 99);
  border: 0px
}